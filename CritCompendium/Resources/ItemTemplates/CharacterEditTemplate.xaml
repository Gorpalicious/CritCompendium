<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:enums="clr-namespace:CritCompendiumInfrastructure.Enums;assembly=CritCompendiumInfrastructure"
                    xmlns:ovm="clr-namespace:CritCompendium.ViewModels.ObjectViewModels"
                    xmlns:views="clr-namespace:CritCompendium.Views">
   <DataTemplate x:Key="_characterEditTemplate" DataType="{x:Type ovm:CharacterEditViewModel}">
      <Grid>
         <ScrollViewer VerticalScrollBarVisibility="Auto" Visibility="{Binding Path=DataContext.InfoEditTabSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type views:CharactersView}}, Converter={StaticResource _boolVisibilityConverter}}">
            <StackPanel>
               <Border Margin="0,10,0,0"
                       Padding="10"
                       Background="Transparent"
                       BorderBrush="{DynamicResource _contentBorderBrush}"
                       BorderThickness="1">
                  <StackPanel>
                     <TextBlock Margin="0,0,0,0"
                                FontWeight="Bold"
                                Foreground="{DynamicResource _primaryTextBrush}"
                                Text="Basic Information" />

                     <StackPanel Width="200"
                                 Margin="0,0,10,0"
                                 HorizontalAlignment="Left">
                        <TextBlock Margin="0,10,0,2"
                                   FontSize="10"
                                   Foreground="{DynamicResource _secondaryTextBrush}"
                                   Text="Name" />
                        <TextBox Style="{DynamicResource _mainTextboxStyle}"
                                 Tag="Character name..."
                                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                     </StackPanel>

                     <WrapPanel>
                        <StackPanel Width="200" Margin="0,0,10,0">
                           <Grid>
                              <Grid.ColumnDefinitions>
                                 <ColumnDefinition Width="*" />
                                 <ColumnDefinition Width="Auto" />
                              </Grid.ColumnDefinitions>

                              <StackPanel Grid.Column="0">
                                 <TextBlock Margin="0,10,0,2"
                                            FontSize="10"
                                            Foreground="{DynamicResource _secondaryTextBrush}"
                                            Text="Background" />
                                 <ComboBox DisplayMemberPath="Item2"
                                           ItemsSource="{Binding Backgrounds}"
                                           SelectedValue="{Binding Background}" />
                              </StackPanel>

                              <Button Grid.Column="1"
                                      Margin="5,0,0,2"
                                      Padding="2"
                                      VerticalAlignment="Bottom"
                                      Command="{Binding ViewBackgroundCommand}"
                                      Style="{DynamicResource _secondaryButtonStyle}"
                                      ToolTip="View Details">
                                 <Image Width="16"
                                        Height="16"
                                        VerticalAlignment="Center"
                                        Source="{DynamicResource _infoImage}" />
                              </Button>
                           </Grid>
                        </StackPanel>

                        <StackPanel Width="200" Margin="0,0,10,0">
                           <TextBlock Margin="0,10,0,2"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Alignment" />
                           <ComboBox DisplayMemberPath="Item2"
                                     ItemsSource="{Binding Alignments}"
                                     SelectedValue="{Binding Alignment}" />
                        </StackPanel>

                        <StackPanel Width="200" Margin="0,0,10,0">
                           <TextBlock Margin="0,10,0,2"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Deity" />
                           <TextBox Style="{DynamicResource _mainTextboxStyle}"
                                    Tag="Deity..."
                                    Text="{Binding Deity, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                     </WrapPanel>

                     <Grid>
                        <Grid.ColumnDefinitions>
                           <ColumnDefinition Width="*" />
                           <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                           <RowDefinition Height="Auto" />
                           <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,10,0">
                           <TextBlock Margin="0,10,0,2"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Personality Traits" />
                           <TextBox Height="40"
                                    AcceptsReturn="True"
                                    Text="{Binding PersonalityTraits, UpdateSourceTrigger=PropertyChanged}"
                                    TextWrapping="Wrap"
                                    VerticalScrollBarVisibility="Auto" />
                        </StackPanel>

                        <StackPanel Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,0,10,0">
                           <TextBlock Margin="0,10,0,2"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Ideals" />
                           <TextBox Height="40"
                                    AcceptsReturn="True"
                                    Text="{Binding Ideals, UpdateSourceTrigger=PropertyChanged}"
                                    TextWrapping="Wrap"
                                    VerticalScrollBarVisibility="Auto" />
                        </StackPanel>

                        <StackPanel Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="0,0,10,0">
                           <TextBlock Margin="0,10,0,2"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Bonds" />
                           <TextBox Height="40"
                                    AcceptsReturn="True"
                                    Text="{Binding Bonds, UpdateSourceTrigger=PropertyChanged}"
                                    TextWrapping="Wrap"
                                    VerticalScrollBarVisibility="Auto" />
                        </StackPanel>

                        <StackPanel Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,0,10,0">
                           <TextBlock Margin="0,10,0,2"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Flaws" />
                           <TextBox Height="40"
                                    AcceptsReturn="True"
                                    Text="{Binding Flaws, UpdateSourceTrigger=PropertyChanged}"
                                    TextWrapping="Wrap"
                                    VerticalScrollBarVisibility="Auto" />
                        </StackPanel>
                     </Grid>

                     <StackPanel Margin="0,0,10,0">
                        <TextBlock Margin="0,10,0,2"
                                   FontSize="10"
                                   Foreground="{DynamicResource _secondaryTextBrush}"
                                   Text="Backstory" />
                        <TextBox Height="200"
                                 AcceptsReturn="True"
                                 Text="{Binding Backstory, UpdateSourceTrigger=PropertyChanged}"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto" />
                     </StackPanel>
                  </StackPanel>
               </Border>

               <Border Margin="0,10,0,0"
                       Padding="10"
                       Background="Transparent"
                       BorderBrush="{DynamicResource _contentBorderBrush}"
                       BorderThickness="1">
                  <StackPanel>
                     <TextBlock Margin="0,0,0,0"
                                FontWeight="Bold"
                                Foreground="{DynamicResource _primaryTextBrush}"
                                Text="Appearance" />

                     <WrapPanel>
                        <StackPanel Width="200" Margin="0,0,10,0">
                           <Grid>
                              <Grid.ColumnDefinitions>
                                 <ColumnDefinition Width="*" />
                                 <ColumnDefinition Width="Auto" />
                              </Grid.ColumnDefinitions>

                              <StackPanel Grid.Column="0">
                                 <TextBlock Margin="0,10,0,2"
                                            FontSize="10"
                                            Foreground="{DynamicResource _secondaryTextBrush}"
                                            Text="Race" />
                                 <ComboBox DisplayMemberPath="Item2"
                                           ItemsSource="{Binding Races}"
                                           SelectedValue="{Binding Race}" />
                              </StackPanel>

                              <Button Grid.Column="1"
                                      Margin="5,0,0,2"
                                      Padding="2"
                                      VerticalAlignment="Bottom"
                                      Command="{Binding ViewRaceCommand}"
                                      Style="{DynamicResource _secondaryButtonStyle}"
                                      ToolTip="View Details">
                                 <Image Width="16"
                                        Height="16"
                                        VerticalAlignment="Center"
                                        Source="{DynamicResource _infoImage}" />
                              </Button>
                           </Grid>
                        </StackPanel>

                        <StackPanel Width="200" Margin="0,0,10,0">
                           <TextBlock Margin="0,10,0,2"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Gender" />
                           <TextBox Style="{DynamicResource _mainTextboxStyle}"
                                    Tag="Gender...."
                                    Text="{Binding Gender, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <StackPanel Width="200" Margin="0,0,10,0">
                           <TextBlock Margin="0,10,0,2"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Age" />
                           <TextBox Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <StackPanel Width="200" Margin="0,0,10,0">
                           <Grid>
                              <Grid.ColumnDefinitions>
                                 <ColumnDefinition Width="*" />
                                 <ColumnDefinition Width="*" />
                              </Grid.ColumnDefinitions>

                              <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                 <TextBlock Margin="0,10,0,2"
                                            FontSize="10"
                                            Foreground="{DynamicResource _secondaryTextBrush}"
                                            Text="Height (feet)" />
                                 <TextBox Text="{Binding HeightFeet, UpdateSourceTrigger=PropertyChanged}" />
                              </StackPanel>

                              <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                 <TextBlock Margin="0,10,0,2"
                                            FontSize="10"
                                            Foreground="{DynamicResource _secondaryTextBrush}"
                                            Text="Height (inches)" />
                                 <TextBox Text="{Binding HeightInches, UpdateSourceTrigger=PropertyChanged}" />
                              </StackPanel>
                           </Grid>
                        </StackPanel>

                        <StackPanel Width="200" Margin="0,0,10,0">
                           <TextBlock Margin="0,10,0,2"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Weight (lbs)" />
                           <TextBox Text="{Binding Weight, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <StackPanel Width="200" Margin="0,0,10,0">
                           <TextBlock Margin="0,10,0,2"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Hair" />
                           <TextBox Style="{DynamicResource _mainTextboxStyle}"
                                    Tag="Hair..."
                                    Text="{Binding Hair, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <StackPanel Width="200" Margin="0,0,10,0">
                           <TextBlock Margin="0,10,0,2"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Eyes" />
                           <TextBox Style="{DynamicResource _mainTextboxStyle}"
                                    Tag="Eyes..."
                                    Text="{Binding Eyes, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <StackPanel Width="200" Margin="0,0,10,0">
                           <TextBlock Margin="0,10,0,2"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Skin" />
                           <TextBox Style="{DynamicResource _mainTextboxStyle}"
                                    Tag="Skin..."
                                    Text="{Binding Skin, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                     </WrapPanel>
                  </StackPanel>
               </Border>

               <Border Margin="0,10,0,0"
                       Padding="10"
                       Background="Transparent"
                       BorderBrush="{DynamicResource _contentBorderBrush}"
                       BorderThickness="1">
                  <StackPanel>
                     <TextBlock Margin="0,0,0,0"
                                FontWeight="Bold"
                                Foreground="{DynamicResource _primaryTextBrush}"
                                Text="Languages" />

                     <TextBlock Margin="0,10,0,0"
                                FontSize="10"
                                Foreground="{DynamicResource _secondaryTextBrush}"
                                Text="Background Bonus" />
                     <TextBlock Margin="0,0,0,10"
                                Foreground="{DynamicResource _primaryTextBrush}"
                                Text="{Binding BackgroundTraitLanguageBonus}"
                                TextWrapping="Wrap" />

                     <TextBlock Margin="0,10,0,0"
                                FontSize="10"
                                Foreground="{DynamicResource _secondaryTextBrush}"
                                Text="Race Bonus" />
                     <TextBlock Margin="0,0,0,10"
                                Foreground="{DynamicResource _primaryTextBrush}"
                                Text="{Binding RaceTraitLanguageBonus}"
                                TextWrapping="Wrap" />

                     <StackPanel Width="200"
                                 Margin="0,0,10,0"
                                 HorizontalAlignment="Left">
                        <Grid>
                           <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="28" />
                              <ColumnDefinition Width="*" />
                           </Grid.ColumnDefinitions>

                           <TextBlock Grid.Column="0"
                                      Margin="0,10,0,1"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Prof" />

                           <TextBlock Grid.Column="1"
                                      Margin="0,10,0,1"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Language" />
                        </Grid>

                        <ItemsControl ItemsSource="{Binding Languages}">
                           <ItemsControl.ItemTemplate>
                              <DataTemplate>
                                 <Grid>
                                    <Grid.ColumnDefinitions>
                                       <ColumnDefinition Width="28" />
                                       <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                       <RowDefinition Height="28" />
                                    </Grid.RowDefinitions>

                                    <CheckBox Grid.Column="0"
                                              Margin="0,6,0,0"
                                              IsChecked="{Binding Proficient}" />

                                    <TextBlock Grid.Column="1"
                                               Margin="0,5,0,0"
                                               Foreground="{DynamicResource _primaryTextBrush}"
                                               Text="{Binding Name}" />
                                 </Grid>
                              </DataTemplate>
                           </ItemsControl.ItemTemplate>
                        </ItemsControl>
                     </StackPanel>
                  </StackPanel>
               </Border>
            </StackPanel>
         </ScrollViewer>

         <Grid Visibility="{Binding Path=DataContext.LevelsEditTabSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type views:CharactersView}}, Converter={StaticResource _boolVisibilityConverter}}">
            <Grid>
               <Grid.RowDefinitions>
                  <RowDefinition Height="Auto" />
                  <RowDefinition Height="*" />
               </Grid.RowDefinitions>

               <Button Grid.Row="0"
                       Width="75"
                       Margin="0,10,0,10"
                       HorizontalAlignment="Left"
                       Command="{Binding AddLevelCommand}"
                       Content="Add Level"
                       Style="{DynamicResource _mainButtonStyle}" />

               <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                  <ItemsControl ItemsSource="{Binding Levels}">
                     <ItemsControl.ItemTemplate>
                        <DataTemplate>
                           <Border Margin="0,10,0,0"
                                   Padding="10"
                                   Background="Transparent"
                                   BorderBrush="{DynamicResource _contentBorderBrush}"
                                   BorderThickness="1">
                              <ContentControl Content="{Binding}" />
                           </Border>
                        </DataTemplate>
                     </ItemsControl.ItemTemplate>
                  </ItemsControl>
               </ScrollViewer>
            </Grid>
         </Grid>

         <ScrollViewer VerticalScrollBarVisibility="Auto" Visibility="{Binding Path=DataContext.AbilitiesEditTabSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type views:CharactersView}}, Converter={StaticResource _boolVisibilityConverter}}">
            <StackPanel>
               <Border Margin="0,10,0,0"
                       Padding="10"
                       Background="Transparent"
                       BorderBrush="{DynamicResource _contentBorderBrush}"
                       BorderThickness="1">
                  <StackPanel>
                     <TextBlock Margin="0,0,0,0"
                                FontWeight="Bold"
                                Foreground="{DynamicResource _primaryTextBrush}"
                                Text="Ability Scores" />

                     <WrapPanel>
                        <StackPanel Width="325" Margin="0,0,10,5">
                           <Grid>
                              <Grid.ColumnDefinitions>
                                 <ColumnDefinition Width="*" />
                                 <ColumnDefinition Width="Auto" />
                                 <ColumnDefinition Width="Auto" />
                              </Grid.ColumnDefinitions>

                              <StackPanel Grid.Column="0">
                                 <TextBlock Margin="0,10,0,2"
                                            FontSize="10"
                                            Foreground="{DynamicResource _secondaryTextBrush}"
                                            Text="Score Method" />
                                 <ComboBox DisplayMemberPath="Item2"
                                           ItemsSource="{Binding AbilityRollMethods}"
                                           SelectedValue="{Binding SelectedAbilityRollMethod}" />
                              </StackPanel>

                              <Button Grid.Column="1"
                                      Width="40"
                                      Height="22"
                                      Margin="10,0,0,1"
                                      VerticalAlignment="Bottom"
                                      Command="{Binding RollAbilityScoresCommand}"
                                      Content="Roll"
                                      Style="{DynamicResource _mainButtonStyle}"
                                      Visibility="{Binding RollMethodHasRoll, Converter={StaticResource _boolVisibilityConverter}}" />

                              <StackPanel Grid.Column="1"
                                          Margin="10,0,10,0"
                                          HorizontalAlignment="Right"
                                          Visibility="{Binding RollMethodHasPoints, Converter={StaticResource _boolVisibilityConverter}}">
                                 <TextBlock Margin="0,10,0,0"
                                            FontSize="10"
                                            Foreground="{DynamicResource _secondaryTextBrush}"
                                            Text="Points Used" />
                                 <TextBlock Margin="1,5,0,0"
                                            Foreground="{DynamicResource _primaryTextBrush}"
                                            Text="{Binding AbilityPointsUsed}" />
                              </StackPanel>

                              <StackPanel Grid.Column="2"
                                          Margin="10,0,10,0"
                                          Visibility="{Binding RollMethodHasRoll, Converter={StaticResource _boolVisibilityConverter}}">
                                 <TextBlock Margin="0,10,0,0"
                                            FontSize="10"
                                            Foreground="{DynamicResource _secondaryTextBrush}"
                                            Text="Rolls" />
                                 <TextBlock Margin="1,5,0,0"
                                            Foreground="{DynamicResource _primaryTextBrush}"
                                            Text="{Binding TimesAbilityScoresRolled}" />
                              </StackPanel>
                           </Grid>
                        </StackPanel>
                     </WrapPanel>

                     <StackPanel Width="325"
                                 Margin="0,0,10,0"
                                 HorizontalAlignment="Left">
                        <Grid>
                           <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="28" />
                              <ColumnDefinition Width="35" />
                              <ColumnDefinition Width="36" />
                              <ColumnDefinition Width="*" />
                              <ColumnDefinition Width="36" />
                              <ColumnDefinition Width="36" />
                              <ColumnDefinition Width="36" />
                              <ColumnDefinition Width="36" />
                           </Grid.ColumnDefinitions>

                           <Grid.RowDefinitions>
                              <RowDefinition Height="Auto" />
                              <RowDefinition Height="32" />
                              <RowDefinition Height="32" />
                              <RowDefinition Height="32" />
                              <RowDefinition Height="32" />
                              <RowDefinition Height="32" />
                              <RowDefinition Height="32" />
                           </Grid.RowDefinitions>

                           <TextBlock Grid.Row="0"
                                      Grid.Column="0"
                                      Margin="0,10,0,1"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Down"
                                      Visibility="{Binding RollMethodHasRoll, Converter={StaticResource _boolVisibilityConverter}}" />

                           <TextBlock Grid.Row="0"
                                      Grid.Column="0"
                                      Margin="0,10,0,1"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Minus"
                                      Visibility="{Binding RollMethodHasPoints, Converter={StaticResource _boolVisibilityConverter}}" />

                           <TextBlock Grid.Row="0"
                                      Grid.Column="0"
                                      Margin="0,10,0,1"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Minus"
                                      Visibility="{Binding RollMethodManual, Converter={StaticResource _boolVisibilityConverter}}" />

                           <TextBlock Grid.Row="0"
                                      Grid.Column="1"
                                      Margin="0,10,0,1"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Score"
                                      TextAlignment="Center" />

                           <TextBlock Grid.Row="0"
                                      Grid.Column="2"
                                      Margin="0,10,0,1"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Up"
                                      TextAlignment="Center"
                                      Visibility="{Binding RollMethodHasRoll, Converter={StaticResource _boolVisibilityConverter}}" />

                           <TextBlock Grid.Row="0"
                                      Grid.Column="2"
                                      Margin="0,10,0,1"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Plus"
                                      TextAlignment="Center"
                                      Visibility="{Binding RollMethodHasPoints, Converter={StaticResource _boolVisibilityConverter}}" />

                           <TextBlock Grid.Row="0"
                                      Grid.Column="2"
                                      Margin="0,10,0,1"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Plus"
                                      TextAlignment="Center"
                                      Visibility="{Binding RollMethodManual, Converter={StaticResource _boolVisibilityConverter}}" />

                           <TextBlock Grid.Row="0"
                                      Grid.Column="3"
                                      Margin="0,10,0,1"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Ability" />

                           <TextBlock Grid.Row="0"
                                      Grid.Column="4"
                                      Margin="0,10,0,1"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Race"
                                      TextAlignment="Center" />

                           <TextBlock Grid.Row="0"
                                      Grid.Column="5"
                                      Margin="0,10,0,1"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Bonus"
                                      TextAlignment="Center" />

                           <TextBlock Grid.Row="0"
                                      Grid.Column="6"
                                      Margin="0,10,0,1"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Levels"
                                      TextAlignment="Center" />

                           <TextBlock Grid.Row="0"
                                      Grid.Column="7"
                                      Margin="0,10,0,1"
                                      FontSize="10"
                                      Foreground="{DynamicResource _secondaryTextBrush}"
                                      Text="Total"
                                      TextAlignment="Center" />

                           <!--  Strength  -->
                           <Button Grid.Row="1"
                                   Grid.Column="0"
                                   Margin="0,5,0,0"
                                   Command="{Binding MoveAbilityDownCommand}"
                                   CommandParameter="{x:Static enums:Ability.Strength}"
                                   Style="{DynamicResource _secondaryButtonStyle}"
                                   ToolTip="Move Score Down"
                                   Visibility="{Binding RollMethodHasRoll, Converter={StaticResource _boolVisibilityConverter}}">
                              <Image Width="16"
                                     Height="16"
                                     VerticalAlignment="Center"
                                     RenderTransformOrigin="0.5,0.5"
                                     Source="{DynamicResource _arrowImage}">
                                 <Image.RenderTransform>
                                    <RotateTransform Angle="180" />
                                 </Image.RenderTransform>
                              </Image>
                           </Button>

                           <Button Grid.Row="1"
                                   Grid.Column="0"
                                   Margin="0,5,0,0"
                                   Command="{Binding DecreaseAbilityCommand}"
                                   CommandParameter="{x:Static enums:Ability.Strength}"
                                   Style="{DynamicResource _secondaryButtonStyle}"
                                   ToolTip="Decrease Ability Score"
                                   Visibility="{Binding RollMethodHasPoints, Converter={StaticResource _boolVisibilityConverter}}">
                              <Image Width="16"
                                     Height="16"
                                     VerticalAlignment="Center"
                                     Source="{DynamicResource _deleteImage}" />
                           </Button>

                           <Button Grid.Row="1"
                                   Grid.Column="0"
                                   Margin="0,5,0,0"
                                   Command="{Binding DecreaseAbilityCommand}"
                                   CommandParameter="{x:Static enums:Ability.Strength}"
                                   Style="{DynamicResource _secondaryButtonStyle}"
                                   ToolTip="Decrease Ability Score"
                                   Visibility="{Binding RollMethodManual, Converter={StaticResource _boolVisibilityConverter}}">
                              <Image Width="16"
                                     Height="16"
                                     VerticalAlignment="Center"
                                     Source="{DynamicResource _deleteImage}" />
                           </Button>

                           <TextBlock Grid.Row="1"
                                      Grid.Column="1"
                                      Margin="0,5,0,0"
                                      VerticalAlignment="Center"
                                      Foreground="{DynamicResource _primaryTextBrush}"
                                      Text="{Binding BaseStrength}"
                                      TextAlignment="Center"
                                      Visibility="{Binding RollMethodManual, Converter={StaticResource _invertBoolVisibilityConverter}}" />

                           <TextBox Grid.Row="1"
                                    Grid.Column="1"
                                    Width="32"
                                    Margin="0,5,0,0"
                                    Style="{DynamicResource _mainTextboxStyle}"
                                    Text="{Binding BaseStrength, UpdateSourceTrigger=PropertyChanged}"
                                    TextAlignment="Center"
                                    Visibility="{Binding RollMethodManual, Converter={StaticResource _boolVisibilityConverter}}" />

                           <Button Grid.Row="1"
                                   Grid.Column="2"
                                   Margin="0,5,0,0"
                                   Command="{Binding MoveAbilityUpCommand}"
                                   CommandParameter="{x:Static enums:Ability.Strength}"
                                   Style="{DynamicResource _secondaryButtonStyle}"
                                   ToolTip="Move Score Up"
                                   Visibility="{Binding RollMethodHasRoll, Converter={StaticResource _boolVisibilityConverter}}">
                              <Image Width="16"
                                     Height="16"
                                     VerticalAlignment="Center"
                                     Source="{DynamicResource _arrowImage}" />
                           </Button>

                           <Button Grid.Row="1"
                                   Grid.Column="2"
                                   Margin="0,5,0,0"
                                   Command="{Binding IncreaseAbilityCommand}"
                                   CommandParameter="{x:Static enums:Ability.Strength}"
                                   Style="{DynamicResource _secondaryButtonStyle}"
                                   ToolTip="Increase Ability Score"
                                   Visibility="{Binding RollMethodHasPoints, Converter={StaticResource _boolVisibilityConverter}}">
                              <Image Width="16"
                                     Height="16"
                                     VerticalAlignment="Center"
                                     Source="{DynamicResource _addImage}" />
                           </Button>

                           <Button Grid.Row="1"
                                   Grid.Column="2"
                                   Margin="0,5,0,0"
                                   Command="{Binding IncreaseAbilityCommand}"
                                   CommandParameter="{x:Static enums:Ability.Strength}"
                                   Style="{DynamicResource _secondaryButtonStyle}"
                                   ToolTip="Increase Ability Score"
                                   Visibility="{Binding RollMethodManual, Converter={StaticResource _boolVisibilityConverter}}">
                              <Image Width="16"
                                     Height="16"
                                     VerticalAlignment="Center"
                                     Source="{DynamicResource _addImage}" />
                           </Button>

                           <TextBlock Grid.Row="1"
                                      Grid.Column="3"
                                      Margin="1,5,0,0"
                                      VerticalAlignment="Center"
                                      Foreground="{DynamicResource _primaryTextBrush}"
                                      Text="Strength" />

                           <TextBlock Grid.Row="1"
                                      Grid.Column="4"
                                      Margin="0,5,0,0"
                                      VerticalAlignment="Center"
                                      Foreground="{DynamicResource _primaryTextBrush}"
                                      Text="{Binding RaceStrengthBonus}"
                                      TextAlignment="Center" />

                           <TextBox Grid.Row="1"
                                    Grid.Column="5"
                                    Width="32"
                                    Margin="0,5,0,0"
                                    Style="{DynamicResource _mainTextboxStyle}"
                                    Text="{Binding BonusStrength, UpdateSourceTrigger=PropertyChanged}"
                                    TextAlignment="Center" />

