<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ovm="clr-namespace:CritCompendium.ViewModels.ObjectViewModels">
   <DataTemplate DataType="{x:Type ovm:FeatViewModel}">
      <StackPanel>
         <TextBlock Margin="0,10,0,0"
                    FontSize="10"
                    Foreground="{DynamicResource _secondaryTextBrush}"
                    Text="Prerequisite" />
         <TextBlock Margin="0,0,0,10"
                    Foreground="{DynamicResource _primaryTextBrush}"
                    Text="{Binding Prerequisite}"
                    TextTrimming="CharacterEllipsis" />

         <TextBlock Margin="0,10,0,0"
                    FontSize="10"
                    Foreground="{DynamicResource _secondaryTextBrush}"
                    Text="Description" />
         <TextBlock Margin="0,0,0,10"
                    Foreground="{DynamicResource _primaryTextBrush}"
                    Text="{Binding Description}"
                    TextWrapping="Wrap" />
      </StackPanel>
   </DataTemplate>
</ResourceDictionary>