<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="_accentColor">#247ab4</Color>
    <Color x:Key="_accentColorHover">#1f689a</Color>
    <SolidColorBrush x:Key="_accentBrush" Color="{DynamicResource _accentColor}" />
    <SolidColorBrush x:Key="_accentHoverBrush" Color="{DynamicResource _accentColorHover}" />
</ResourceDictionary>