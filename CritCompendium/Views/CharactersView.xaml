         <Border Grid.Row="2"
                    BorderBrush="{DynamicResource _contentBorderBrush}"
                    BorderThickness="0,1,0,0">
            <Grid Margin="0,5,0,0">
               <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition Width="Auto" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="Auto" />
               </Grid.ColumnDefinitions>

               <Button Grid.Column="0"
                            Width="22"
                            Height="22"
                            Margin="0,0,8,0"
                            Command="{Binding AddCharacterCommand}"
                            Style="{DynamicResource _secondaryButtonStyle}"
                            ToolTip="Add New">
                  <Image Width="16"
                               Height="16"
                               VerticalAlignment="Center"
                               Source="{DynamicResource _addImage}" />
               </Button>

               <Button Grid.Column="1"
                            Width="22"
                            Height="22"
                            Margin="0,0,8,0"
                            Command="{Binding DeleteCharacterCommand}"
                            Style="{DynamicResource _secondaryButtonStyle}"
                            ToolTip="Delete Selected">
                  <Image Width="16"
                               Height="16"
                               VerticalAlignment="Center"
                               Source="{DynamicResource _deleteImage}" />
               </Button>

               <Button Grid.Column="2"
                            Width="22"
                            Height="22"
                            Command="{Binding CopyCharacterCommand}"
                            Style="{DynamicResource _secondaryButtonStyle}"
                            ToolTip="Copy Selected">
                  <Image Width="16"
                               Height="16"
                               VerticalAlignment="Center"
                               Source="{DynamicResource _copyImage}" />
               </Button>

               <Button Grid.Column="4"
                            Command="{Binding ImportCommand}"
                            Style="{DynamicResource _secondaryButtonStyle}"
                            ToolTip="Import">
                  <Image Width="16"
                               Height="16"
                               VerticalAlignment="Center"
                               RenderTransformOrigin="0.5,0.5"
                               Source="{DynamicResource _importImage}" />
               </Button>
            </Grid>
         </Border>
      </Grid>

      <ContentControl Grid.Column="1"
                        Margin="15,0,17,10"
                        Content="{Binding SelectedCharacter}"
                        ContentTemplate="{DynamicResource _characterDisplayTemplate}"
                        Style="{DynamicResource _emptyContentControlStyle}"
                        Tag="No Character Selected"
                        Visibility="{Binding IsEditingCharacter, Converter={StaticResource _invertBoolVisibilityConverter}}" />

      <Grid Grid.Column="1"
              Margin="15,0,0,10"
              Visibility="{Binding IsEditingCharacter, Converter={StaticResource _boolVisibilityConverter}}">
         <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
         </Grid.ColumnDefinitions>

         <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
         </Grid.RowDefinitions>

         <Grid Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
               <ColumnDefinition Width="Auto" />
               <ColumnDefinition Width="Auto" />
               <ColumnDefinition Width="Auto" />
               <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                        Margin="0,0,15,0"
                        BorderThickness="0,0,0,3">
               <Border.Style>
                  <Style TargetType="Border">
                     <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=DataContext.InfoEditTabSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CharactersView}}}" Value="True">
                           <Setter Property="BorderBrush" Value="{DynamicResource _buttonBackgroundBrush}" />
                        </DataTrigger>
                     </Style.Triggers>
                  </Style>
               </Border.Style>

               <TextBlock Cursor="Hand"
                               Text="Information"
                               TextTrimming="CharacterEllipsis">
                  <TextBlock.InputBindings>
                     <MouseBinding Command="{Binding Path=DataContext.SelectInfoEditCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CharactersView}}}" MouseAction="LeftClick" />
                  </TextBlock.InputBindings>

                  <TextBlock.Style>
                     <Style BasedOn="{StaticResource _editNavTextBlockStyle}" TargetType="TextBlock">
                        <Style.Triggers>
                           <DataTrigger Binding="{Binding Path=DataContext.InfoEditTabSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CharactersView}}}" Value="True">
                              <Setter Property="Opacity" Value="1" />
                           </DataTrigger>
                        </Style.Triggers>
                     </Style>
                  </TextBlock.Style>
               </TextBlock>
            </Border>

            <Border Grid.Column="1"
                        Margin="0,0,15,0"
                        BorderThickness="0,0,0,3">
               <Border.Style>
                  <Style TargetType="Border">
                     <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=DataContext.LevelsEditTabSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CharactersView}}}" Value="True">
                           <Setter Property="BorderBrush" Value="{DynamicResource _buttonBackgroundBrush}" />
                        </DataTrigger>
                     </Style.Triggers>
                  </Style>
               </Border.Style>

               <TextBlock Cursor="Hand"
                               Text="Levels"
                               TextTrimming="CharacterEllipsis">
                  <TextBlock.InputBindings>
                     <MouseBinding Command="{Binding Path=DataContext.SelectLevelsEditCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CharactersView}}}" MouseAction="LeftClick" />
                  </TextBlock.InputBindings>

                  <TextBlock.Style>
                     <Style BasedOn="{StaticResource _editNavTextBlockStyle}" TargetType="TextBlock">
                        <Style.Triggers>
                           <DataTrigger Binding="{Binding Path=DataContext.LevelsEditTabSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CharactersView}}}" Value="True">
                              <Setter Property="Opacity" Value="1" />
                           </DataTrigger>
                        </Style.Triggers>
                     </Style>
                  </TextBlock.Style>
               </TextBlock>
            </Border>

            <Border Grid.Column="2"
                        Margin="0,0,15,0"
                        BorderThickness="0,0,0,3">
               <Border.Style>
                  <Style TargetType="Border">
                     <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=DataContext.AbilitiesEditTabSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CharactersView}}}" Value="True">
                           <Setter Property="BorderBrush" Value="{DynamicResource _buttonBackgroundBrush}" />
                        </DataTrigger>
                     </Style.Triggers>
                  </Style>
               </Border.Style>

               <TextBlock Cursor="Hand"
                               Text="Abilities and Skills"
                               TextTrimming="CharacterEllipsis">
                  <TextBlock.InputBindings>
                     <MouseBinding Command="{Binding Path=DataContext.SelectAbilitiesEditCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CharactersView}}}" MouseAction="LeftClick" />
                  </TextBlock.InputBindings>

                  <TextBlock.Style>
                     <Style BasedOn="{StaticResource _editNavTextBlockStyle}" TargetType="TextBlock">
                        <Style.Triggers>
                           <DataTrigger Binding="{Binding Path=DataContext.AbilitiesEditTabSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CharactersView}}}" Value="True">
                              <Setter Property="Opacity" Value="1" />
                           </DataTrigger>
                        </Style.Triggers>
                     </Style>
                  </TextBlock.Style>
               </TextBlock>
            </Border>

            <Border Grid.Column="3"
                        Margin="0,0,15,0"
                        BorderThickness="0,0,0,3">
               <Border.Style>
                  <Style TargetType="Border">
                     <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=DataContext.ProficiencyEditTabSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CharactersView}}}" Value="True">
                           <Setter Property="BorderBrush" Value="{DynamicResource _buttonBackgroundBrush}" />
                        </DataTrigger>
                     </Style.Triggers>
                  </Style>
               </Border.Style>

               <TextBlock Cursor="Hand"
                               Text="Proficiencies"
                               TextTrimming="CharacterEllipsis">
                  <TextBlock.InputBindings>
                     <MouseBinding Command="{Binding Path=DataContext.SelectProficiencyEditCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CharactersView}}}" MouseAction="LeftClick" />
                  </TextBlock.InputBindings>

                  <TextBlock.Style>
                     <Style BasedOn="{StaticResource _editNavTextBlockStyle}" TargetType="TextBlock">
                        <Style.Triggers>
                           <DataTrigger Binding="{Binding Path=DataContext.ProficiencyEditTabSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CharactersView}}}" Value="True">
                              <Setter Property="Opacity" Value="1" />
                           </DataTrigger>
                        </Style.Triggers>
                     </Style>
                  </TextBlock.Style>
               </TextBlock>
            </Border>
         </Grid>

         <Button Grid.Row="0"
                    Grid.Column="1"
                    Width="60"
                    Margin="5,0"
                    VerticalAlignment="Top"
                    Command="{Binding CancelEditCharacterCommand}"
                    Content="Cancel"
                    Style="{DynamicResource _rejectButtonStyle}" />

         <Button Grid.Row="0"
                    Grid.Column="2"
                    Width="50"
                    VerticalAlignment="Top"
                    Command="{Binding SaveEditCharacterCommand}"
                    Content="Save"
                    Style="{DynamicResource _mainButtonStyle}" />

         <!--<ScrollViewer Grid.Row="1"
                          Grid.Column="0"
                          Grid.ColumnSpan="3">-->
         <ContentControl Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Content="{Binding EditingCharacter}"
                            ContentTemplate="{DynamicResource _characterEditTemplate}" />
         <!--</ScrollViewer>-->
      </Grid>
   </Grid>
</UserControl>

